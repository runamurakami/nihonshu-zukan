<div class="relative mb-6">
  <!-- タイトルを中央配置 -->
  <h1 class="text-2xl font-bold text-center">日本酒詳細</h1>

  <!-- 右上にボタン配置（絶対配置） -->
  <div class="absolute right-0 top-0">
    <%= link_to "編集", edit_sake_path(@sake),
        class: "px-3 py-1 bg-blue-600 text-white rounded-lg hover:bg-blue-700 text-sm" %>
    <%= link_to "削除", sake_path(@sake),
      data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" },
      class: "px-3 py-1 bg-red-600 text-white rounded-lg hover:bg-red-700 text-sm" %>
  </div>
</div>

  <!-- 上段: 画像と日本酒情報 -->
  <div class="flex gap-6 mb-4">
    <!-- 左側: ラベル画像 -->
    <% if @sake.label_image.attached? %>
      <div class="flex-shrink-0 w-48">
        <%= image_tag @sake.label_image, class: "w-full h-auto rounded-lg" %>
      </div>
    <% end %>

    <!-- 右側: コメント以外の情報 -->
    <div class="md:w-1/2 space-y-2">
      <p class="text-xl font-semibold"><%= @sake.name %></p>
      <div class="flex  justify-start gap-x-8 font-semibold mb-1">
        <p class="m-0"><%= @prefecture.name %></p>
        <p class="m-0"><%= @brewery.name %></p>
      </div>
      <p class="mb-1"><strong>日本酒度:</strong> <%= @sake.sake_meter_value%></p>
      <p class="mb-1"><strong>総合評価:</strong> <%= @sake.rating %></p>
      <p class="mb-1"><strong>タグ:</strong> <%= @sake.taste_tag_name %></p>
      <!-- タグ表示 -->
      <div class="flex flex-wrap gap-2">
        <% @taste_tags.each do |tag| %>
          <span class="bg-blue-100 text-blue-800 rounded-full px-2 py-1 text-sm">
            <%= tag.name %>
          </span>
        <% end %>
      </div>
    </div>
  </div>

  <!-- 下段: コメント -->
  <% if @sake.comment.present? %>
   <div class="border border-gray-200 rounded-md p-3 mt-4">
  <p class="text-gray-700 whitespace-pre-line"><%= @sake.comment %></p>
    </div>
  <% end %>

  <!-- 一覧に戻るリンク -->
  <div class="mt-4">
    <%= link_to "一覧に戻る", sakes_path, class: "text-blue-800 hover:text-blue-600 underline" %>
  </div>
