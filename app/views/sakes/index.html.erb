<h1 class="text-2xl font-bold mb-4">日本酒一覧</h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @sakes.each do |sake| %>
    <div class="bg-white rounded-lg shadow p-4">
      <% if sake.label_image.attached? %>
        <%= image_tag sake.label_image, class: "w-full h-48 object-cover rounded" %>
      <% end %>
      <h2 class="text-lg font-semibold mt-2"><%= sake.name %></h2>
    </div>
  <% end %>
</div>
