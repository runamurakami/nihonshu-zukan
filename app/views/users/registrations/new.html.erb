<h2 class="text-2xl font-bold mb-6 text-center">新規登録</h2>

<%= render 'shared/error_messages', resource: resource %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="mb-4">
    <%= f.label :name, "名前", class: "block font-semibold mb-2" %>
    <%= f.text_field :name, autofocus: true, class: "w-full border border-gray-300 rounded-lg p-2 focus:ring focus:ring-blue-200" %>
  </div>

  <div class="mb-4">
    <%= f.label :email, "メールアドレス", class: "block font-semibold mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border border-gray-300 rounded-lg p-2 focus:ring focus:ring-blue-200" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, "パスワード", class: "block font-semibold mb-2" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full border border-gray-300 rounded-lg p-2 focus:ring focus:ring-blue-200" %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, "パスワード確認用", class: "block font-semibold mb-2" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border border-gray-300 rounded-lg p-2 focus:ring focus:ring-blue-200" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "w-full bg-blue-800 hover:bg-blue-900 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>
