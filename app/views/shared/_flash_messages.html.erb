<% flash.each do |key, message| %>
    <%# Tailwind で色分け: notice は緑、alert は赤 %>
    <div class="mb-4 px-4 py-3 rounded 
                <%= key == 'notice' ? 'bg-green-50 border border-green-400 text-green-800' : 'bg-red-50 border border-red-400 text-red-800' %>">
      <%= message %>
    </div>
  <% end %>